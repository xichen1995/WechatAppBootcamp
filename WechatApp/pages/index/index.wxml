<!--index.wxml-->

<!-- search_bar section-->
<view class= "search_section" bindtap="suo">  
  <view class="search_input">  
    <view class="df search_arr">  
      <icon class="" size='20' type='search'></icon>  
      <input class="" placeholder="请输入关键字" value="{{searchValue}}"/>  
    </view>  
  </view>  
  <view class='search_button'>搜索</view>  
</view> 

<view class = "menu_section">

</view> 



<!-- swiper section-->
<view class = "swiper_section">  
<swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}"
  circular="{{circular}}" style="height:{{imgheights[current]}}rpx;">  
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">  
      <swiper-item >  
        <image src="{{item}}" mode="aspectFit" bindload="imageLoad"         
        class=".itemimage" style="height:{{imgheights[current]}}rpx;width:{{imgwidth}}rpx;"/>  
      </swiper-item>  
    </block>  
  </swiper>  
</view>  
