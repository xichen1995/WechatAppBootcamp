/**index.wxss**/

/** search bar **/
.search_section{  
  display: flex;  
  flex-direction: row  
} 

.search_input{  
  width: 80%;  
}  

.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 20rpx;  
}  

.search_arr input{  
  margin-left: 60rpx;  
  height: 60rpx;  
  border-radius: 5px;  
} 

.search_arr icon{
  margin: 10rpx 10rpx 10rpx 10rpx;  
  position: absolute;  
  left:25rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center; 

}

.search_button {  
  margin-left: 15rpx;  
  width: 15%;  
  line-height: 150%;  
  text-align: center;  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
}  

.search_section{
  margin-top: 30rpx;
}

 /** menu **/
.menu_section{
  margin-top: 30rpx;
}


/** swiper **/
.swiper {  
  width: 100%;

}

.swiper_section{
  margin-top: 30rpx;
